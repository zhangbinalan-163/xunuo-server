<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dabo.xunuo.base.dao.DeviceInfoMapper">

    <sql id="TABLE">t_device_info</sql>

    <resultMap id="DATA" type="com.dabo.xunuo.base.entity.DeviceInfo">
        <id property="id" column="id"/>
        <result property="deviceId" column="device_id"/>
        <result property="createTime" column="create_time"/>
        <result property="loginTime" column="login_time"/>
        <result property="loginUserId" column="login_user_id"/>
        <result property="deviceTypeId" column="device_type"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="entity.id">
        INSERT INTO
        <include refid="TABLE"/>
        (device_id,create_time,login_time,login_user_id,device_type)
        VALUES
        (#{entity.deviceId},#{entity.createTime},#{entity.loginTime},#{entity.loginUserId},#{entity.deviceTypeId})
    </insert>

    <select id="getByDeviceId" resultMap="DATA">
        SELECT *
        FROM
        <include refid="TABLE"/>
        WHERE device_id=#{deviceId} and device_type=#{deviceType}
    </select>

    <update id="bindUser">
        UPDATE
        <include refid="TABLE"/>
        SET login_user_id=#{userId},login_time=#{loginTime}
        WHERE device_id=#{deviceId} and device_type=#{deviceType}
    </update>

    <select id="getByUserId" resultMap="DATA">
        SELECT *
        FROM
        <include refid="TABLE"/>
        WHERE login_user_id=#{userId}
    </select>
</mapper>