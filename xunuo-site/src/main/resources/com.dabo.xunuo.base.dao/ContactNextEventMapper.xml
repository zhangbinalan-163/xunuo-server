<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dabo.xunuo.base.dao.ContactNextEventMapper">

    <sql id="TABLE">t_contact_next_event</sql>

    <resultMap id="DATA" type="com.dabo.xunuo.base.entity.ContactNextEvent">
        <id property="id" column="id"/>
        <result property="contactId" column="contact_id"/>
        <result property="eventId" column="event_id"/>
        <result property="nextEventTime" column="trigger_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!--新增-->
    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="entity.id">
        INSERT INTO
        <include refid="TABLE"/>
        (contact_id,event_id,trigger_time,update_time)
        VALUES
        (#{entity.contactId},#{entity.eventId},#{entity.nextEventTime},#{entity.updateTime})
    </insert>

    <insert id="insertBatch" parameterType="List">
        INSERT INTO
        <include refid="TABLE"/>
        (contact_id,event_id,trigger_time,update_time)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.contactId},#{item.eventId},#{item.nextEventTime},#{item.updateTime})
        </foreach>
    </insert>

    <insert id="update" parameterType="com.dabo.xunuo.base.entity.ContactNextEvent">
        UPDATE
        <include refid="TABLE"/>
        SET event_id=#{eventId},
        trigger_time=#{nextEventTime},
        update_time=#{updateTime}
        WHERE id=#{id}
    </insert>

    <select id="getById" resultMap="DATA">
        SELECT *
        FROM
        <include refid="TABLE"/>
        WHERE id=#{keyId}
    </select>

    <select id="getByContacts" resultMap="DATA">
        SELECT *
        FROM
        <include refid="TABLE"/>
        WHERE contact_id IN
        <foreach item="item" index="index" collection="contactIds" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <delete id="deleteByContact">
        DELETE FROM
        <include refid="TABLE"/>
        WHERE contact_id=#{contactId}
    </delete>

    <select id="getByEventId" resultMap="DATA">
        SELECT *
        FROM
        <include refid="TABLE"/>
        WHERE event_id =#{eventId}
    </select>

    <delete id="delete" parameterType="Long">
        DELETE FROM <include refid="TABLE"/>
        WHERE id=#{keyId}
    </delete>
</mapper>